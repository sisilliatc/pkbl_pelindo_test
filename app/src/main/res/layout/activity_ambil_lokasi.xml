<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ambil_lokasi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#BBDEFB"
    tools:context="com.happytumiteam.surveypkbl.AmbilLokasi">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:padding="20dp"
        android:background="#FFFFFF"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:src="@drawable/cancel"
            android:id="@+id/cancel_ambil_lokasi"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="250dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="5dp"
            android:textColor="#000000"
            android:id="@+id/Link_textView"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/View_Link"
            android:layout_margin="8dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="5dp"
            android:textColor="#000000"
            android:id="@+id/Latitude_textView"
            android:textSize="18sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/View_Latitude"
            android:layout_margin="8dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="5dp"
            android:textColor="#000000"
            android:id="@+id/Longitude_textView"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/View_Longitude"
            android:layout_margin="8dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TableRow>

                <Button
                    android:text="TAG LOKASI"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_tag_lokasi"
                    android:layout_marginRight="5dp"
                    android:background="#1561ae"
                    android:textColor="#FFFFFF"
                    android:layout_column="1"
                    />

                <Button
                    android:text="TAMPILKAN"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/btn_Lihat_Map"
                    android:background="#1561ae"
                    android:textColor="#FFFFFF"
                    android:layout_marginRight="5dp"
                    android:layout_column="2"/>

                <Button
                    android:text="SIMPAN"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/btn_simpan_lokasi"
                    android:background="#1561ae"
                    android:textColor="#FFFFFF"
                    android:layout_column="3"/>

            </TableRow>
        </TableLayout>

    </LinearLayout>

</RelativeLayout>
