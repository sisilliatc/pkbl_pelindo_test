<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_form_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBDEFB"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.happytumiteam.surveypkbl.FormData">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="7dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableRow>

                <TextView
                    android:text="Nomor Registrasi"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="16sp"
                    android:layout_column="1"/>

                <EditText

                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:background="#FFFFFF"
                    android:textSize="16dp"
                    android:layout_column="2"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_height="wrap_content" />

            </TableRow>

            <TableRow>
                <TextView
                    android:text="Nomor Proposal"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView3"
                    android:layout_alignEnd="@+id/textView2"
                    android:textSize="16sp"
                    android:layout_column="1"/>

                <EditText
                    android:background="#FFFFFF"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_column="2"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Tanggal Kunjungan"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_below="@+id/textView3"
                    android:layout_alignParentStart="true"
                    android:textSize="16sp"
                    android:layout_column="1"/>

                <EditText
                    android:background="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:layout_column="2"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Nama Mitra Binaan"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView4"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView5"
                    android:textSize="16sp"
                    android:layout_column="1"/>

                <EditText
                    android:background="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:layout_column="2"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Bidang Usaha"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView6"
                    android:textSize="16sp"
                    android:layout_column="1"/>

                <EditText
                    android:background="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:layout_column="2"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Alamat"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView6"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView7"
                    android:textSize="16sp"
                    android:layout_column="1"/>

                <EditText
                    android:background="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    android:layout_column="2"
                    android:textSize="16sp"
                    android:id="@+id/edittext_alamat" />

            </TableRow>

            <TableRow>
                <Button
                    android:text="Ambil Lokasi"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:layout_below="@+id/edittext_alamat"
                    android:id="@+id/btn_ambil_lokasi"
                    android:layout_marginLeft="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="185dp"
                    android:layout_height="35dp"
                    android:padding="3dp"
                    android:textColor="#0D47A1"
                    android:visibility="visible"
                    android:textStyle="normal|bold"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:layout_column="2"/>
            </TableRow>

            <TableRow>
                <Button
                    android:text="Ambil Gambar"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:layout_below="@+id/btn_ambil_lokasi"
                    android:id="@+id/btn_ambil_gambar"
                    android:layout_marginLeft="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="185dp"
                    android:layout_height="35dp"
                    android:padding="3dp"
                    android:textColor="#0D47A1"
                    android:visibility="visible"
                    android:textStyle="normal|bold"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:layout_column="2"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:layout_below="@+id/textView9"
                    android:layout_alignParentStart="true"
                    android:layout_alignEnd="@+id/textView9"
                    android:text="Bertemu dengan"
                    android:paddingRight="10dp"
                    android:textSize="16sp"
                    android:layout_column="1"/>

                <EditText
                    android:background="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:layout_column="2"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:layout_below="@+id/textView9"
                    android:layout_alignParentStart="true"
                    android:layout_alignEnd="@+id/textView9"
                    android:text="Keakuratan data proposal"
                    android:paddingRight="10dp"
                    android:textSize="16sp"
                    android:layout_column="1"/>

                <EditText
                    android:background="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:layout_column="2"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Kondisi Jaminan"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView10"
                    android:id="@+id/textView11"
                    android:textSize="16sp"
                    android:layout_column="1"/>

                <EditText
                    android:background="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:layout_column="2"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Kondisi Usaha"
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:textSize="16sp"
                    android:layout_column="1"/>

                <EditText
                    android:background="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:layout_column="2"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Kondisi Keuangan"
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:textSize="16sp"
                    android:layout_column="1"/>

                <EditText
                    android:background="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:layout_column="2"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Lainnya"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:textSize="16sp"
                    android:layout_column="1"/>

                <EditText
                    android:background="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:layout_column="2"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Rencana Selanjutnya"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17"
                    android:textSize="16sp"
                    android:layout_column="1"
                    android:fontFamily="sans-serif" />

                <EditText
                    android:background="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:layout_column="2"
                    android:textSize="16sp" />
            </TableRow>

                <Button
                    android:text="SIMPAN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_simpan"
                    android:layout_alignParentStart="true"
                    android:background="#0D47A1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="0dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:layout_column="2"
                    />



        </TableLayout>
    </ScrollView>

</RelativeLayout>
